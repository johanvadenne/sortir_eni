{% extends 'base.html.twig' %}

{% block title %}Gestion des Villes{% endblock %}

{% block main_class %}py-4{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-building"></i> Gestion des Villes</h1>
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>
            </div>

            <div class="row">
                <div class="col-md-6">
                    {% block form_fields %}
                        <div class="card shadow">
                            <div class="card-header bg-primary text-white">
                                <h3 class="mb-0">
                                    <i class="fas fa-plus-circle"></i> Ajouter une ville
                                </h3>
                            </div>
                            <div class="card-body">
                                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                    <div class="row">
                                        <div class="col-12">
                                            {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            {{ form_row(form.codePostal, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="mt-4">
                                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                            <button type="submit" class="btn btn-primary btn-lg">
                                                <i class="fas fa-check-circle"></i> Ajouter
                                            </button>
                                            <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary btn-lg">
                                                <i class="fas fa-times-circle"></i> Annuler
                                            </a>
                                        </div>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    {% endblock %}
                </div>

                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="bi bi-list"></i> Liste des villes</h5>
                        </div>
                        <div class="card-body">
                            {% if villes is empty %}
                                <p class="text-muted text-center">
                                    <i class="bi bi-info-circle"></i> Aucune ville trouvée.
                                </p>
                            {% else %}
                                <div class="table-responsive admin-mobile">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th><i class="bi bi-building"></i> Nom</th>
                                                <th><i class="bi bi-mailbox"></i> Code Postal</th>
                                                <th><i class="bi bi-gear"></i> Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for ville in villes %}
                                                <tr>
                                                    <td>{{ ville.nom }}</td>
                                                    <td>{{ ville.codePostal }}</td>
                                                    <td>
                                                        <a href="{{ path('admin_ville_edit', {id: ville.id}) }}" class="btn btn-sm btn-warning">
                                                            <i class="bi bi-pencil"></i> Modifier
                                                        </a>
                                                        <form method="post" action="{{ path('admin_ville_delete', {id: ville.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ville ?')">
                                                            <button type="submit" class="btn btn-sm btn-danger">
                                                                <i class="bi bi-trash"></i> Supprimer
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">Retour à l'administration</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}