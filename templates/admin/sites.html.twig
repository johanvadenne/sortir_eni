{% extends 'base.html.twig' %}

{% block title %}Gestion des Sites{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1>Gestion des Sites</h1>

            <div class="row">
                <div class="col-md-6">
                    {% block form_fields %}
                        <div class="card shadow">
                            <div class="card-header bg-primary text-white">
                                <h3 class="mb-0">
                                    <i class="fas fa-plus-circle"></i> Ajouter un site
                                </h3>
                            </div>
                            <div class="card-body">
                                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                    <div class="row">
                                        <div class="col-12">
                                            {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="mt-4">
                                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                            <button type="submit" class="btn btn-primary btn-lg">
                                                <i class="fas fa-check-circle"></i> Ajouter
                                            </button>
                                            <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary btn-lg">
                                                <i class="fas fa-times-circle"></i> Annuler
                                            </a>
                                        </div>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    {% endblock %}
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5>Liste des sites</h5>
                        </div>
                        <div class="card-body">
                            {% if sites is empty %}
                                <p class="text-muted">Aucun site trouvé.</p>
                            {% else %}
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Nom</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for site in sites %}
                                                <tr>
                                                    <td>{{ site.nom }}</td>
                                                    <td>
                                                        <a href="{{ path('admin_site_edit', {id: site.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                                        <form method="post" action="{{ path('admin_site_delete', {id: site.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce site ?')">
                                                            <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">Retour à l'administration</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}