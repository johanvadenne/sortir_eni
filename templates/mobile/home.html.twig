{% extends 'mobile/base.html.twig' %}

{% block title %}Accueil - Sortir Mobile{% endblock %}

{% block body %}
<div class="container-fluid p-0">
    <!-- Filtres Mobile -->
    <div class="mobile-card">
        <div class="card-header bg-light">
            <h6 class="mb-0"><i class="bi bi-funnel"></i> Filtres</h6>
        </div>
        <div class="card-body p-2">
            <form method="get">
                <div class="row g-2">
                    <div class="col-6">
                        <select name="site" class="form-select form-select-sm">
                            <option value="">Tous les sites</option>
                            {% for site in sites %}
                                <option value="{{ site.id }}" {{ app.request.query.get('site') == site.id ? 'selected' : '' }}>
                                    {{ site.nom }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-6">
                        <select name="etat" class="form-select form-select-sm">
                            <option value="">Tous les états</option>
                            <option value="Ouverte" {{ app.request.query.get('etat') == 'Ouverte' ? 'selected' : '' }}>Ouverte</option>
                            <option value="Clôturée" {{ app.request.query.get('etat') == 'Clôturée' ? 'selected' : '' }}>Clôturée</option>
                            <option value="En cours" {{ app.request.query.get('etat') == 'En cours' ? 'selected' : '' }}>En cours</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-sm w-100">
                            <i class="bi bi-search"></i> Filtrer
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste des Sorties Mobile -->
    {% if sorties is empty %}
        <div class="mobile-card">
            <div class="card-body text-center p-4">
                <i class="bi bi-info-circle text-muted" style="font-size: 2rem;"></i>
                <p class="text-muted mt-2 mb-0">Aucune sortie trouvée</p>
            </div>
        </div>
    {% else %}
        {% for sortie in sorties %}
            <div class="mobile-card">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h6 class="card-title mb-0">{{ sortie.nom }}</h6>
                        <span class="badge bg-{{
                            sortie.etat.libelle == 'Créée' ? 'secondary' :
                            sortie.etat.libelle == 'Ouverte' ? 'success' :
                            sortie.etat.libelle == 'Clôturée' ? 'warning' :
                            sortie.etat.libelle == 'Activité en cours' ? 'primary' :
                            sortie.etat.libelle == 'Activité terminée' ? 'info' :
                            sortie.etat.libelle == 'Annulée' ? 'danger' :
                            'dark'
                        }} badge-sm">
                            {{ sortie.etat.libelle }}
                        </span>
                    </div>

                    <div class="mb-2">
                        <small class="text-muted">
                            <i class="bi bi-calendar-date"></i> {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}
                        </small>
                    </div>

                    <div class="mb-2">
                        <small class="text-muted">
                            <i class="bi bi-geo-alt"></i> {{ sortie.lieu.nom }}
                        </small>
                    </div>

                    <div class="mb-2">
                        <small class="text-muted">
                            <i class="bi bi-people"></i> {{ sortie.nbInscriptionsActuelles }}/{{ sortie.nbInscriptionsMax }}
                        </small>
                    </div>

                    <div class="d-grid gap-1">
                        <a href="{{ path('sortie_show', {id: sortie.id}) }}" class="btn btn-primary btn-sm">
                            <i class="bi bi-eye"></i> Voir détails
                        </a>

                        {% if app.user and sortie.etat.libelle == 'Ouverte' %}
                            {% if is_inscrit %}
                                <form method="post" action="{{ path('sortie_desistement', {id: sortie.id}) }}">
                                    <button type="submit" class="btn btn-outline-warning btn-sm w-100">
                                        <i class="bi bi-x-circle"></i> Se désinscrire
                                    </button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('sortie_inscription', {id: sortie.id}) }}">
                                    <button type="submit" class="btn btn-success btn-sm w-100">
                                        <i class="bi bi-check-circle"></i> S'inscrire
                                    </button>
                                </form>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
