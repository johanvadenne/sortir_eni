{% extends 'mobile/base.html.twig' %}

{% block title %}{{ sortie.nom }} - Mobile{% endblock %}

{% block body %}
<div class="container-fluid p-0">
    <!-- Header de la sortie -->
    <div class="mobile-card">
        <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title mb-0">{{ sortie.nom }}</h5>
                <span class="badge bg-{{
                    sortie.etat.libelle == 'Créée' ? 'secondary' :
                    sortie.etat.libelle == 'Ouverte' ? 'success' :
                    sortie.etat.libelle == 'Clôturée' ? 'warning' :
                    sortie.etat.libelle == 'Activité en cours' ? 'primary' :
                    sortie.etat.libelle == 'Activité terminée' ? 'info' :
                    sortie.etat.libelle == 'Annulée' ? 'danger' :
                    'dark'
                }}">
                    {{ sortie.etat.libelle }}
                </span>
            </div>
        </div>
    </div>

    <!-- Détails de la sortie -->
    <div class="mobile-card">
        <div class="card-header bg-light">
            <h6 class="mb-0"><i class="bi bi-info-circle"></i> Détails</h6>
        </div>
        <div class="card-body p-3">
            <div class="mb-3">
                <strong><i class="bi bi-calendar-date text-primary"></i> Date:</strong><br>
                <small>{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</small>
            </div>

            <div class="mb-3">
                <strong><i class="bi bi-clock text-primary"></i> Durée:</strong><br>
                <small>{{ sortie.duree ? sortie.duree ~ ' minutes' : 'Non définie' }}</small>
            </div>

            <div class="mb-3">
                <strong><i class="bi bi-calendar-check text-primary"></i> Date limite:</strong><br>
                <small>{{ sortie.dateLimiteInscription|date('d/m/Y H:i') }}</small>
            </div>

            <div class="mb-3">
                <strong><i class="bi bi-geo-alt text-primary"></i> Lieu:</strong><br>
                <small>{{ sortie.lieu.nom }}</small>
            </div>

            {% if sortie.lieu.rue %}
                <div class="mb-3">
                    <strong><i class="bi bi-geo text-primary"></i> Adresse:</strong><br>
                    <small>{{ sortie.lieu.rue }}</small>
                </div>
            {% endif %}

            <div class="mb-3">
                <strong><i class="bi bi-building text-primary"></i> Ville:</strong><br>
                <small>{{ sortie.lieu.ville.nom }} ({{ sortie.lieu.ville.codePostal }})</small>
            </div>

            <div class="mb-3">
                <strong><i class="bi bi-person text-primary"></i> Organisateur:</strong><br>
                <small>{{ sortie.organisateur.pseudo }}</small>
            </div>

            <div class="mb-3">
                <strong><i class="bi bi-people text-primary"></i> Participants:</strong><br>
                <small>{{ sortie.nbInscriptionsActuelles }}/{{ sortie.nbInscriptionsMax }}</small>
            </div>

            {% if sortie.infosSortie %}
                <div class="mb-3">
                    <strong><i class="bi bi-info text-primary"></i> Informations:</strong><br>
                    <small>{{ sortie.infosSortie }}</small>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Actions -->
    <div class="mobile-card">
        <div class="card-header bg-light">
            <h6 class="mb-0"><i class="bi bi-gear"></i> Actions</h6>
        </div>
        <div class="card-body p-3">
            <div class="d-grid gap-2">
                {% if can_publish %}
                    <form method="post" action="{{ path('sortie_publier', {id: sortie.id}) }}">
                        <button type="submit" class="btn btn-success mobile-btn">
                            <i class="bi bi-check-circle"></i> Publier la sortie
                        </button>
                    </form>
                {% endif %}

                {% if can_edit %}
                    <a href="{{ path('sortie_edit', {id: sortie.id}) }}" class="btn btn-warning mobile-btn">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                {% endif %}

                {% if can_cancel %}
                    <form method="post" action="{{ path('sortie_annuler', {id: sortie.id}) }}">
                        <button type="submit" class="btn btn-danger mobile-btn" onclick="return confirm('Êtes-vous sûr de vouloir annuler cette sortie ?')">
                            <i class="bi bi-x-circle"></i> Annuler la sortie
                        </button>
                    </form>
                {% endif %}

                {% if can_delete %}
                    <form method="post" action="{{ path('sortie_supprimer', {id: sortie.id}) }}">
                        <button type="submit" class="btn btn-outline-danger mobile-btn" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette sortie ?')">
                            <i class="bi bi-trash"></i> Supprimer
                        </button>
                    </form>
                {% endif %}

                {% if app.user and sortie.etat.libelle == 'Ouverte' %}
                    {% if is_inscrit %}
                        <form method="post" action="{{ path('sortie_desistement', {id: sortie.id}) }}">
                            <button type="submit" class="btn btn-outline-warning mobile-btn">
                                <i class="bi bi-x-circle"></i> Se désinscrire
                            </button>
                        </form>
                    {% else %}
                        <form method="post" action="{{ path('sortie_inscription', {id: sortie.id}) }}">
                            <button type="submit" class="btn btn-primary mobile-btn">
                                <i class="bi bi-check-circle"></i> S'inscrire
                            </button>
                        </form>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Participants -->
    <div class="mobile-card">
        <div class="card-header bg-light">
            <h6 class="mb-0">
                <i class="bi bi-people"></i> Participants ({{ participants_inscrits|length }}/{{ sortie.nbInscriptionsMax }})
            </h6>
        </div>
        <div class="card-body p-3">
            {% if participants_inscrits is empty %}
                <p class="text-muted text-center mb-0">
                    <i class="bi bi-person-x"></i> Aucun participant inscrit
                </p>
            {% else %}
                {% for participant in participants_inscrits %}
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div>
                            <i class="bi bi-person-circle text-primary"></i>
                            {{ participant.pseudo }}
                        </div>
                        {% if participant.administrateur %}
                            <span class="badge bg-danger badge-sm">Admin</span>
                        {% endif %}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
