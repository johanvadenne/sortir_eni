{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block main_class %}py-4{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        {% if participant.photoProfil %}
                            <img src="{{ participant.photoProfil }}" alt="Photo de profil" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;">
                        {% else %}
                            <div class="rounded-circle me-3 d-flex align-items-center justify-content-center bg-light text-primary" style="width: 50px; height: 50px; font-size: 18px; font-weight: bold;">
                                {{ participant.prenom|first|upper }}{{ participant.nom|first|upper }}
                            </div>
                        {% endif %}
                        <h3 class="mb-0"><i class="bi bi-person-circle"></i> Mon Profil</h3>
                    </div>
                    <a href="{{ path('profil_edit') }}" class="btn btn-light">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                </div>
                <div class="card-body profil-mobile">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <i class="bi bi-person-badge text-primary"></i>
                                <strong>Pseudo:</strong> {{ participant.pseudo }}
                            </div>
                            <div class="mb-3">
                                <i class="bi bi-person text-primary"></i>
                                <strong>Nom:</strong> {{ participant.nom }}
                            </div>
                            <div class="mb-3">
                                <i class="bi bi-person text-primary"></i>
                                <strong>Prénom:</strong> {{ participant.prenom }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <i class="bi bi-telephone text-primary"></i>
                                <strong>Téléphone:</strong> {{ participant.telephone ?: 'Non renseigné' }}
                            </div>
                            <div class="mb-3">
                                <i class="bi bi-envelope text-primary"></i>
                                <strong>Email:</strong> {{ participant.mail }}
                            </div>
                            <div class="mb-3">
                                <i class="bi bi-building text-primary"></i>
                                <strong>Site:</strong> {{ participant.site.nom }}
                            </div>
                        </div>
                    </div>

                    {% if participant.administrateur %}
                        <div class="mt-3">
                            <span class="badge bg-danger fs-6">
                                <i class="bi bi-shield-check"></i> Administrateur
                            </span>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('profil_edit') }}" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Modifier mes informations
                        </a>
                        <a href="{{ path('profil_change_password') }}" class="btn btn-warning">
                            <i class="bi bi-key"></i> Changer mon mot de passe
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
