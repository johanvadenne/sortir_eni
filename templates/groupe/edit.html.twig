{% extends 'base.html.twig' %}

{% block title %}Modifier {{ groupe.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>Modifier le groupe "{{ groupe.nom }}"
                    </h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom) }}
                                {% if form.nom.vars.help %}
                                    <div class="form-text">{{ form.nom.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.description) }}
                                {% if form.description.vars.help %}
                                    <div class="form-text">{{ form.description.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <div class="form-check">
                                    {{ form_widget(form.actif, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(form.actif, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                                {{ form_errors(form.actif) }}
                                {% if form.actif.vars.help %}
                                    <div class="form-text">{{ form.actif.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    {% if form.participants is defined %}
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    {{ form_label(form.participants, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.participants, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.participants) }}
                                    {% if form.participants.vars.help %}
                                        <div class="form-text">{{ form.participants.vars.help }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Attention :</strong> La modification du nom du groupe peut affecter les sorties existantes.
                        Assurez-vous que tous les membres sont d'accord avec les changements.
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('groupe_show', {'id': groupe.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Retour
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Enregistrer les modifications
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
