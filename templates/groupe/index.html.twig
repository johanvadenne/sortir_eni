{% extends 'base.html.twig' %}

{% block title %}Groupes{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-users me-2"></i>Mes Groupes
                </h1>
                <div>
                    <a href="{{ path('groupe_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Créer un groupe
                    </a>
                    <a href="{{ path('groupe_search') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-search me-1"></i>Rechercher
                    </a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('groupe_stats') }}" class="btn btn-outline-info">
                            <i class="fas fa-chart-bar me-1"></i>Statistiques
                        </a>
                    {% endif %}
                </div>
            </div>

            {% if groupes is empty %}
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h4>Aucun groupe trouvé</h4>
                    <p class="mb-3">Vous n'êtes membre d'aucun groupe pour le moment.</p>
                    <a href="{{ path('groupe_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Créer votre premier groupe
                    </a>
                </div>
            {% else %}
                <div class="row">
                    {% for groupe in groupes %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-users me-2"></i>{{ groupe.nom }}
                                    </h5>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    {% if groupe.description %}
                                        <p class="card-text text-muted mb-3">{{ groupe.description|slice(0, 100) }}{% if groupe.description|length > 100 %}...{% endif %}</p>
                                    {% endif %}

                                    <div class="row text-center mb-3">
                                        <div class="col-6">
                                            <div class="border-end">
                                                <strong class="text-primary">{{ groupe.nbParticipants }}</strong>
                                                <br>
                                                <small class="text-muted">Membres</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <strong class="text-success">{{ groupe.nbSorties }}</strong>
                                            <br>
                                            <small class="text-muted">Sorties</small>
                                        </div>
                                    </div>

                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <small class="text-muted">
                                                <i class="fas fa-user me-1"></i>Créé par {{ groupe.createur.prenom }} {{ groupe.createur.nom }}
                                            </small>
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>{{ groupe.dateCreation|date('d/m/Y') }}
                                            </small>
                                        </div>

                                        <div class="d-grid gap-2">
                                            <a href="{{ path('groupe_show', {'id': groupe.id}) }}" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye me-1"></i>Voir le groupe
                                            </a>

                                            {% if groupe.canGérer(user) %}
                                                <div class="btn-group w-100" role="group">
                                                    <a href="{{ path('groupe_edit', {'id': groupe.id}) }}" class="btn btn-outline-secondary btn-sm">
                                                        <i class="fas fa-edit me-1"></i>Modifier
                                                    </a>
                                                    <a href="{{ path('groupe_membres', {'id': groupe.id}) }}" class="btn btn-outline-info btn-sm">
                                                        <i class="fas fa-users me-1"></i>Membres
                                                    </a>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
