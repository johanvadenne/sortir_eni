{% extends 'base.html.twig' %}

{% block title %}Liste des Sorties{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1>Liste des Sorties</h1>

            {% if sorties is empty %}
                <div class="alert alert-info">
                    <p>Aucune sortie trouvée.</p>
                </div>
            {% else %}
                <div class="row">
                    {% for sortie in sorties %}
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5>{{ sortie.nom }}</h5>
                                        {% if sortie.groupe %}
                                            <small class="text-muted">
                                                <i class="bi bi-people me-1"></i>Groupe: {{ sortie.groupe.nom }}
                                            </small>
                                        {% endif %}
                                    </div>
                                    <div class="text-end">
                                        {% if sortie.groupe %}
                                            <span class="badge bg-info me-1">Privée</span>
                                        {% endif %}
                                        <span class="badge bg-{{
                                            sortie.etat.libelle == 'Créée' ? 'secondary' :
                                            sortie.etat.libelle == 'Ouverte' ? 'success' :
                                            sortie.etat.libelle == 'Clôturée' ? 'warning' :
                                            sortie.etat.libelle == 'Activité en cours' ? 'primary' :
                                            sortie.etat.libelle == 'Activité terminée' ? 'info' :
                                            sortie.etat.libelle == 'Annulée' ? 'danger' :
                                            'dark'
                                        }}">
                                            {{ sortie.etat.libelle }}
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p><strong>Date:</strong> {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</p>
                                    <p><strong>Lieu:</strong> {{ sortie.lieu.nom }}</p>
                                    <p><strong>Organisateur:</strong> {{ sortie.organisateur.pseudo }}</p>
                                    <p><strong>Inscriptions:</strong> {{ sortie.nbInscriptionsActuelles }}/{{ sortie.nbInscriptionsMax }}</p>

                                    <div class="mt-3">
                                        <a href="{{ path('sortie_show', {id: sortie.id}) }}" class="btn btn-primary">Voir détails</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            <div class="mt-4">
                <a href="{{ path('home') }}" class="btn btn-secondary">Retour à l'accueil</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
