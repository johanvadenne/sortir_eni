{% extends 'base.html.twig' %}

{% block title %}Test des Règles Métier{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1>Test des Règles Métier</h1>

            {% for category, tests in results %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h3>{{ category|title }}</h3>
                    </div>
                    <div class="card-body">
                        {% for testKey, test in tests %}
                            <div class="alert {% if test.valid is defined and test.valid %}alert-success{% elseif test.authorized is defined and test.authorized %}alert-success{% else %}alert-danger{% endif %}">
                                <h5>{{ test.test }}</h5>
                                {% if test.valid is defined %}
                                    <p><strong>Résultat:</strong> {{ test.valid ? '✓ Valide' : '✗ Invalide' }}</p>
                                    {% if test.errors is defined and test.errors|length > 0 %}
                                        <p><strong>Erreurs:</strong></p>
                                        <ul>
                                            {% for error in test.errors %}
                                                <li>{{ error }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                {% elseif test.authorized is defined %}
                                    <p><strong>Résultat:</strong> {{ test.authorized ? '✓ Autorisé' : '✗ Interdit' }}</p>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}

            <div class="mt-4">
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">Retour à l'administration</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
