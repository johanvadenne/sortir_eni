{% extends 'base.html.twig' %}

{% block title %}Modifier {{ lieu.nom }}{% endblock %}

{% block main_class %}py-4{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            {% include 'form/base_form.html.twig' with {
                'form_title': 'Modifier ' ~ lieu.nom,
                'form_icon': 'geo-alt',
                'submit_button_text': 'Enregistrer',
                'cancel_url': path('lieu_index')
            } %}
        </div>
    </div>
</div>
{% endblock %}

{% block form_fields %}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.ville, {'attr': {'class': 'form-select'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{ form_row(form.rue, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.latitude, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.longitude, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
{% endblock %}
